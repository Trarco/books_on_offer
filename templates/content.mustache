<div class="books-on-offer">
    <div class="books-container">
        {{#blocktitle}}<h3>{{blocktitle}}</h3>{{/blocktitle}}
        {{#subtitle}}<p class="books-subtitle">{{subtitle}}</p>{{/subtitle}}

        <div class="carousel-controls">
            <button class="carousel-arrow carousel-prev" aria-label="Precedente">&#10094;</button>

            <div class="carousel-wrapper">
                <div class="books-carousel" tabindex="0">
                    {{#books}}
                    <div class="book-card">
                        <div class="book-cover-container">
                            {{#url}}
                            <a href="{{url}}" target="_blank" rel="noopener">
                                {{#image}}
                                <img src="{{image}}" alt="{{title}} di {{author}}" class="book-cover">
                                {{/image}}
                            </a>
                            {{/url}}
                            {{^url}}
                            {{#image}}
                            <img src="{{image}}" alt="{{title}} di {{author}}" class="book-cover">
                            {{/image}}
                            {{/url}}
                        </div>

                        <div class="book-info">
                            <div class="book-title">
                                <strong>{{title}}</strong>
                            </div>
                            {{#author}}
                            <div class="book-author">
                                <span>
                                    {{author}}
                                </span>
                            </div>
                            {{/author}}
                            <div class="book-link">
                                {{#url}}
                                <a href="{{url}}" target="_blank" rel="noopener" class="book-button">Vai al libro</a>
                                {{/url}}
                                {{^url}}
                                <span class="book-button disabled">Non disponibile</span>
                                {{/url}}
                            </div>
                        </div>
                    </div>
                    {{/books}}
                </div>
                <div class="carousel-dots"></div>
            </div>

            <button class="carousel-arrow carousel-next" aria-label="Successivo">&#10095;</button>
        </div>
    </div>
</div>